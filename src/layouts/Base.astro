---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Creative work and research by Casey" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title} | Casey Clan</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body>
  <header>
    <nav>
      <a href="/" class="site-title">Casey Clan</a>
      <ul>
        <li><a href="/posts">Writing</a></li>
        <li><a href="/projects">Projects</a></li>
        <li><a href="/pieces">Gallery</a></li>
        <li><a href="/notes">Notes</a></li>
        <li><a href="/about">About</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer>
    <p>&copy; {new Date().getFullYear()} Casey Clan. All rights reserved.</p>
  </footer>
</body>
</html>

<style is:global>
  :root {
    --color-bg: #ffffff;
    --color-text: #000000;
    --color-text-muted: #555555;
    --color-text-light: #888888;
    --color-accent: #000000;
    --color-accent-hover: #333333;
    --color-border: #e0e0e0;
    --color-border-dark: #cccccc;
    --font-sans: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    --font-mono: 'SF Mono', Monaco, Consolas, monospace;
    --max-width: 68rem;
    --spacing-unit: 1rem;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-size: 16px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    font-family: var(--font-sans);
    background: var(--color-bg);
    color: var(--color-text);
    line-height: 1.65;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    font-weight: 300;
    letter-spacing: 0.01em;
  }

  h1, h2, h3, h4, h5, h6 {
    font-weight: 500;
    letter-spacing: -0.02em;
    line-height: 1.25;
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  a:hover {
    color: var(--color-accent-hover);
  }

  img {
    max-width: 100%;
    height: auto;
  }

  ::selection {
    background: #000000;
    color: #ffffff;
  }
</style>

<style>
  header {
    border-bottom: 1px solid var(--color-border);
    padding: 1.5rem 2rem;
  }

  nav {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .site-title {
    font-weight: 500;
    font-size: 1.125rem;
    color: var(--color-text);
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .site-title:hover {
    color: var(--color-text);
  }

  nav ul {
    display: flex;
    gap: 2rem;
    list-style: none;
  }

  nav ul a {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    font-weight: 400;
    letter-spacing: 0.03em;
    text-transform: uppercase;
  }

  nav ul a:hover {
    color: var(--color-text);
  }

  main {
    flex: 1;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 3rem 2rem;
    width: 100%;
  }

  footer {
    border-top: 1px solid var(--color-border);
    padding: 2.5rem 2rem;
    text-align: center;
    color: var(--color-text-light);
    font-size: 0.8rem;
    letter-spacing: 0.02em;
  }
</style>
