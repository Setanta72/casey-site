---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Creative work and research by Casey" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title} | Casey Clan</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body>
  <header>
    <nav>
      <a href="/" class="site-title">Casey Clan</a>
      <ul>
        <li><a href="/posts">Writing</a></li>
        <li><a href="/projects">Projects</a></li>
        <li><a href="/pieces">Gallery</a></li>
        <li><a href="/notes">Notes</a></li>
        <li><a href="/about">About</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer>
    <p>&copy; {new Date().getFullYear()} Casey Clan. All rights reserved.</p>
  </footer>
</body>
</html>

<style is:global>
  :root {
    --color-bg: #fafafa;
    --color-text: #1a1a1a;
    --color-text-muted: #666;
    --color-accent: #2563eb;
    --color-border: #e5e5e5;
    --font-sans: system-ui, -apple-system, sans-serif;
    --font-mono: 'SF Mono', Consolas, monospace;
    --max-width: 65rem;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --color-bg: #1a1a1a;
      --color-text: #e5e5e5;
      --color-text-muted: #999;
      --color-accent: #60a5fa;
      --color-border: #333;
    }
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: var(--font-sans);
    background: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  img {
    max-width: 100%;
    height: auto;
  }
</style>

<style>
  header {
    border-bottom: 1px solid var(--color-border);
    padding: 1rem;
  }

  nav {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .site-title {
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--color-text);
  }

  nav ul {
    display: flex;
    gap: 1.5rem;
    list-style: none;
  }

  nav a {
    color: var(--color-text-muted);
  }

  nav a:hover {
    color: var(--color-text);
  }

  main {
    flex: 1;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 2rem 1rem;
    width: 100%;
  }

  footer {
    border-top: 1px solid var(--color-border);
    padding: 2rem 1rem;
    text-align: center;
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }
</style>
