---
import Base from '../../layouts/Base.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(project => ({
    params: { id: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);

// Find related pieces
const allPieces = await getCollection('pieces');
const relatedPieces = allPieces.filter(p => p.data.project === project.id);
---

<Base title={project.data.title} description={project.data.description}>
  <article>
    <header>
      <div class="meta">
        <span class="category">{project.data.category}</span>
        <span class="status" data-status={project.data.status}>{project.data.status}</span>
      </div>
      <h1>{project.data.title}</h1>
      <p class="dates">
        Started: {project.data.started.toLocaleDateString('en-IE', { month: 'long', year: 'numeric' })}
        {project.data.updated && (
          <span> Â· Updated: {project.data.updated.toLocaleDateString('en-IE', { month: 'long', year: 'numeric' })}</span>
        )}
      </p>
      {project.data.tags.length > 0 && (
        <div class="tags">
          {project.data.tags.map(tag => <span class="tag">{tag}</span>)}
        </div>
      )}
    </header>

    <div class="content">
      <Content />
    </div>

    {relatedPieces.length > 0 && (
      <section class="related">
        <h2>Pieces from this project</h2>
        <div class="pieces-grid">
          {relatedPieces.map(piece => (
            <a href={`/pieces/${piece.id}`} class="piece">
              <span class="piece-title">{piece.data.title}</span>
            </a>
          ))}
        </div>
      </section>
    )}
  </article>

  <nav class="back">
    <a href="/projects">&larr; Back to all projects</a>
  </nav>
</Base>

<style>
  article {
    max-width: 50rem;
    margin: 0 auto;
  }

  header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .category, .status {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
  }

  .status[data-status="active"] {
    color: var(--color-accent);
  }

  h1 {
    font-size: 2rem;
    margin: 0.5rem 0;
    line-height: 1.2;
  }

  .dates {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    background: var(--color-border);
    padding: 0.125rem 0.5rem;
    border-radius: 1rem;
  }

  .content {
    line-height: 1.7;
  }

  .content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 0.5rem;
  }

  .content :global(p) {
    margin-bottom: 1rem;
  }

  .content :global(img) {
    border-radius: 0.5rem;
    margin: 1rem 0;
  }

  .related {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .related h2 {
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .pieces-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 0.75rem;
  }

  .piece {
    padding: 1rem;
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    color: var(--color-text);
  }

  .piece:hover {
    border-color: var(--color-accent);
    text-decoration: none;
  }

  .back {
    margin-top: 3rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }
</style>
