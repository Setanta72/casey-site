---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Base title="Writing" description="Blog posts, articles, and opinions">
  <h1>Writing</h1>
  <p class="intro">Blog posts, research articles, and opinions on design, code, and making things.</p>

  {posts.length > 0 ? (
    <div class="post-grid">
      {posts.map(post => (
        <a href={`/posts/${post.id}`} class="post-card">
          <div class="thumbnail">
            <img
              src={post.data.image || '/images/placeholder.svg'}
              alt=""
              loading="lazy"
            />
          </div>
          <div class="content">
            <time datetime={post.data.date.toISOString()}>
              {post.data.date.toLocaleDateString('en-IE', { day: 'numeric', month: 'short', year: 'numeric' })}
            </time>
            <h2>{post.data.title}</h2>
            {post.data.description && <p class="description">{post.data.description}</p>}
            {post.data.tags.length > 0 && (
              <div class="tags">
                {post.data.tags.slice(0, 3).map(tag => <span class="tag">{tag}</span>)}
              </div>
            )}
          </div>
        </a>
      ))}
    </div>
  ) : (
    <p class="empty">No posts yet. Check back soon.</p>
  )}
</Base>

<style>
  h1 {
    font-size: 2rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin-bottom: 0.75rem;
  }

  .intro {
    color: var(--color-text-muted);
    margin-bottom: 3rem;
    font-weight: 300;
  }

  .post-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .post-card {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
    border: 1px solid var(--color-border);
    padding: 1.25rem;
    color: var(--color-text);
    transition: border-color 0.2s ease;
  }

  .post-card:hover {
    border-color: var(--color-text);
    text-decoration: none;
  }

  .thumbnail {
    flex-shrink: 0;
    width: 120px;
    aspect-ratio: 4/3;
    overflow: hidden;
    background: #f5f5f5;
  }

  .thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.2s ease;
  }

  .post-card:hover .thumbnail img {
    opacity: 0.9;
  }

  .content {
    flex: 1;
    min-width: 0;
  }

  time {
    font-size: 0.75rem;
    color: var(--color-text-light);
    letter-spacing: 0.03em;
  }

  h2 {
    font-size: 1rem;
    font-weight: 400;
    margin: 0.5rem 0;
    line-height: 1.4;
  }

  .description {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin: 0.5rem 0 0;
    line-height: 1.5;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .tag {
    font-size: 0.7rem;
    color: var(--color-text-light);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .empty {
    color: var(--color-text-muted);
    text-align: center;
    padding: 4rem 0;
  }
</style>
